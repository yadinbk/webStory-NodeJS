<h6>Dashboard</h6>
<h4>Welcome {{name}}</h4>
<h6>Here are your stories</h6>
{{#if stories}}
<table class="striped white">
    <thead>
        <tr>
            <th>Title</th>
            <th>Date</th>
            <th>Status</th>
            {{!-- <th>Title</th> --}}
        </tr>
    </thead>
    <tbody>
        {{#each stories}}
        <tr>
            <td><a href="/stories/{{_id}}">{{title}}</a></td>
            <td>{{formatDate createdAt 'MMMM Do YYYY, hh:mm a'}}</td>
            <td class="dash-status">{{status}}</td>

        </tr>
        {{/each}}
    </tbody>
</table>
{{else}}
<p>You have not created stories yet</p>
{{/if}}